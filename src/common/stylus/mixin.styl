border-1px($rgbaColor)
  position relative
  &:after
    content: ''
    display: block
    position: absolute
    left: 0
    bottom: 0
    width: 100%
    border-top: 1px solid $rgbaColor

bg-img($url,$bgWidth,$bgHeight)
  background: url($url + "@2x.png") center center no-repeat
  -webkit-background-size: $bgWidth $bgHeight
  background-size: $bgWidth $bgHeight
  @media (-webkit-min-device-pixel-ratio: 3),(min-device-pixel-ratio: 3)
    background: url($url + "@3x.png") center center no-repeat
    -webkit-background-size: $bgWidth $bgHeight
    background-size: $bgWidth $bgHeight
